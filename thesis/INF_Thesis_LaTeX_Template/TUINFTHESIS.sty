\newcommand{\thesisadvisorname}[1]{\xdef\tuinfthesisadvisorname{#1}}
\newcommand{\thesisassistantonename}[1]{\xdef\tuinfthesisassistantonename{#1}}
\newcommand{\thesisassistanttwoname}[1]{\xdef\tuinfthesisassistanttwoname{#1}}

\newcommand{\thesistype}[1]{
	\ifthenelse{\equal{#1}{bachelor} \or \equal{#1}{master}}
		{\xdef\tuinfthesistype{#1}}
		{\PackageError{TUINFBA}{Invalid thesis type specification. Choose 'bachelor' or 'master'.}{}}}

\newcommand{\thesisauthorgender}[1]{
	\ifthenelse{\equal{#1}{male} \or \equal{#1}{female}}
		{\xdef\tuinfthesisauthorgender{#1}}
		{\PackageError{TUINFBA}{Invalid author gender specification. Choose 'female' or 'male'.}{}}}

\newcommand{\thesisadvisorgender}[1]{
	\ifthenelse{\equal{#1}{male} \or \equal{#1}{female}}
		{\xdef\tuinfthesisadvisorgender{#1}}
		{\PackageError{TUINFBA}{Invalid advisor gender specification. Choose 'female' or 'male'.}{}}}

\newcommand{\tuinfthesistypename}{\ifthenelse{\equal{\tuinfthesistype}{master}}{MASTERARBEIT}{BACHELORARBEIT}}
\newcommand{\tuinfthesistypenameen}{\ifthenelse{\equal{\tuinfthesistype}{master}}{MASTER'S THESIS}{BACHELOR'S THESIS}}
\newcommand{\tuinfthesisdegree}{\ifthenelse{\equal{\tuinfthesistype}{master}}{Master of Science}{Bachelor of Science}}
\newcommand{\tuinfthesisverfasser}{\ifthenelse{\equal{\tuinfthesisauthorgender}{male}}{Verfasser}{Verfasserin}}
\newcommand{\tuinfthesisbetreuer}{\ifthenelse{\equal{\tuinfthesisadvisorgender}{male}}{Betreuer}{Betreuerin}}

